{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Angular",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": [
        "serve",
        "--open"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector"
    }
  ]
}
